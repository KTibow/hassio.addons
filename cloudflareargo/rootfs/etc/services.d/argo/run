#!/usr/bin/with-contenv bashio
# ==============================================================================
# Community Hass.io Add-ons: Node-RED
# Starts Node-RED
# ==============================================================================
declare -a options
declare certificate 
declare url

haurl=$(bashio::config 'url')
certificate=$(bashio::config 'certificate')

bashio::log.info "Starting CloudFlare Argo"

timeout 300 bash -c 'while [[ "$(curl --insecure -s -o /dev/null -w ''%{http_code}'' ${url})" != "200" ]]; do sleep 5; done'
exec /opt/cloudflared --config /etc/cloudflared/1.yml --origincert ${certificate}
